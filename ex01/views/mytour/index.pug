extends ../layout

block content
  .container
    h1.main-title MyTours
    
    table.table.table-hover
      thead
        tr
          th Tour Name
          th
      tbody
        each i in reservations
          tr
            td
              a(href=`/items/${reservations.itemNo}`)= i.itemName
            td
              a.btn.btn-sm.btn-outline-danger(href=`/item/reserve/${i._id}?_method=DELETE`)
                | #[i.fa.fa-trash] Delete